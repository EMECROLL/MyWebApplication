@model List<MyWebApplication.Models.Item>
@{
    ViewData["Title"] = "Lista";
}

<h3>Items</h3>

<a class="btn btn-primary" asp-action="Create">Agregar nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Nº Serie</th>
            <th>Categoria</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Clientes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.SerialNumber?.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.Name</td>
                <td>$ @item.Price.ToString("N2")</td>
                <td>
                    @foreach(var client in item.ItemClients)
                    {
                        @client.Client.Name
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

